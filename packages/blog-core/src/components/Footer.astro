---
interface Props {
  profileName: string
  rssUrl: string
  sitemapUrl: string
  poweredByName?: string
  poweredByUrl?: string
  currentYear?: number
}

const {
  profileName,
  rssUrl,
  sitemapUrl,
  poweredByName = 'Temporal Flow',
  poweredByUrl = 'https://github.com/dndiy/Temporal-Flow',
  currentYear = new Date().getFullYear(),
} = Astro.props
---

<div class="transition border-t border-black/10 dark:border-white/15 my-10 border-dashed mx-32"></div>
<div class="transition border-dashed border-[oklch(85%_0.01_var(--hue))] dark:border-white/15 rounded-2xl mb-12 flex flex-col items-center justify-center px-6">
    <div class="transition text-50 text-sm text-center">
        &copy; <span id="copyright-year">{currentYear}</span> {profileName}. All Rights Reserved. /
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={rssUrl}>RSS</a> /
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={sitemapUrl}>Sitemap</a><br>
        Powered by
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={poweredByUrl}>{poweredByName}</a>
    </div>
</div>
