---
import SharedImageWrapper from '@merkin/blog-core/components/misc/ImageWrapper.astro'

interface Props {
  id?: string;
  src?: string;
  class?: string;
  alt?: string;
  position?: string;
  basePath?: string;
  loading?: 'eager' | 'lazy';
  widths?: number[];
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpeg';
}

const props = Astro.props
---
<SharedImageWrapper {...props} />
