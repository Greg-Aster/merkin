---
import { getCollection } from 'astro:content';
import QuizLayout from '../../layouts/QuizLayout.astro';

const allQuizzes = await getCollection('quizzes');
---
<QuizLayout
  title="Quizzes"
  description="Test your knowledge of the MegaMeal universe."
>
  <div class="card-base p-6 md:p-8">
    <h1 class="text-4xl font-bold mb-6 text-center" style="color: var(--primary)">Available Quizzes</h1>
    <ul class="flex flex-col gap-4">
      {allQuizzes.map(quiz => (
        <li>
          <a href={`/quiz/${quiz.id}/`} class="block card-base2 p-6 hover:border-primary transition-colors duration-200">
            <h2 class="text-2xl font-bold text-90">{quiz.data.title}</h2>
            <p class="text-75 mt-2">{quiz.data.description}</p>
          </a>
        </li>
      ))}
    </ul>
  </div>
</QuizLayout>